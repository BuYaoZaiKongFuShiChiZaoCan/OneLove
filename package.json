{
  "name": "onelove-frontend",
  "version": "1.0.0",
  "description": "OneLove Frontend with Netlify Functions",
  "scripts": {
    "build": "node build-simple.js && echo 'Static site build completed'",
    "install-functions": "cd backend/netlify-functions && npm install --production",
    "dev": "netlify dev",
    "start-backend": "cd backend && node server.js",
    "start-local": "cd backend && node server.js",
    "deploy": "cd backend && node deploy-netlify.js"
  },
  "devDependencies": {
    "netlify-cli": "^17.0.0"
  },
  "engines": {
    "node": ">=18.x"
  }
}
